<UserControl x:Class="DotNetLab1_WPF.LoginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450" Width="350">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter your card number:" Margin="10" FontSize="18"/>
            <TextBox x:Name="CardNumberInput" Margin="10" Padding="4"/>
            <TextBlock Text="Enter your PIN:" Margin="10" FontSize="18"/>
            <PasswordBox x:Name="PinInput" Margin="10" Padding="4"/>
            <Button Content="Log in" Click="OnLoginClick" HorizontalAlignment="Center" Margin="10" FontSize="18" Padding="5"/>
        </StackPanel>
    </Grid>
</UserControl>
