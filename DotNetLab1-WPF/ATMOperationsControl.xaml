<UserControl x:Class="DotNetLab1_WPF.ATMOperationsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="450" Width="350">
    <Grid>
        <StackPanel Margin="0 0 0 200">
            <Button Content="Check your balance" Click="OnCheckBalanceClick" Margin="10 5" Padding="2" FontSize="14"/>
            <Button Content="Withdraw cash" Click="OnWithdrawClick" Margin="10 5" Padding="2" FontSize="14"/>
            <Button Content="Deposit to your account" Click="OnDepositClick" Padding="2" Margin="10 5" FontSize="14"/>
            <Button Content="Transfer money" Click="OnTransferClick" Margin="10 5" Padding="2" FontSize="14"/>
            <Button Content="Access the authorization menu" Click="OnExitClick" Margin="10 5" Padding="2" FontSize="14"/>
        </StackPanel>
        <StackPanel Name="OperationField" Margin="0 240 0 0">
            
        </StackPanel>
    </Grid>
</UserControl>
